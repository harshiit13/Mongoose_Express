    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


    <style>
        nav {
  width: 80%;
  margin: 0 auto;
  padding: 15px 0;
  box-shadow: 0px 5px 0px #408da7;
}
nav ul {
  list-style: none;
  text-align: center;
}
nav ul li {
  display: inline-block;
}
nav ul li a {
  display: block;
  padding: 15px;
  text-decoration: none;
  color: #040404;
  font-weight: 800;
  text-transform: uppercase;
  margin: 0 10px;
}
nav ul li a,
nav ul li a:after,
nav ul li a:before {
  transition: all .5s;
}
nav.shift ul li a {
  position:relative;
  z-index: 1;
}
nav.shift ul li a:hover {
  color: #07680a;
}
nav.shift ul li a:after {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 1px;
  content: '.';
  color: transparent;
  background: #0ff116;
  visibility: none;
  opacity: 0;
  z-index: -1;
}
nav.shift ul li a:hover:after {
  opacity: 1;
  visibility: visible;
  height: 100%;
}
.i1{
    width: 600px;
    height: 400px;
    margin: 25px;
    margin-left: auto;
    margin-right: auto;
    display: block;
}
h2{
    color: white;
    text-shadow:-1px 1px rgb(196, 247, 149);
}
.p1{
    color: #408da7;
    text-decoration: dashed blue;
    text-shadow: -2px 2px #0ff116 ;
}

.m1{
    background-color: rgb(95, 131, 61);
    height: 100px;
    border-radius: 20px;
    transition: all 0.35s;
}
.m1:hover{
    translate: 5px -5px;
}

.b1{
    margin-left: 37%;
}
.d1{
    margin-left: 47%;
    margin-top: 20px;
    margin-bottom: 10px;
}
    </style>
</head>

<body>

    <nav class="shift">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/farms">Farms</a></li>
          <li><a href="/products">Products</a></li>
          <li><a href="/candy">Candy</a></li>
          <li><a href="#">Nice staff</a></li>
        </ul>
      </nav>


            </div>

    </div>


    <div class="btn-group b1" role="group" aria-label="Basic example"></div>
    <button class="btn btn-info "  onclick="window.location.href = '/products';" >View All Products</button>
    <button class="btn btn-info " onclick="window.location.href = '/products/<%=product._id%>/edit';" >Edit</button>
    <button class="btn btn-secondary " onclick="validate()">Validate me </button>
</div>
    <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
        <button class="btn d1 btn-danger" disabled id="bt1">Delete</button>
    </form>

    <script>
        function validate(){
            var a = prompt("Enter Varification code");
            if(a=="1312"){
                document.getElementById("bt1").disabled = false;
            }
            else{
                alert("Wrong code bro");
            }
        }
